<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page"
    android:padding="24dp">

    <ProgressBar
        android:id="@+id/progressFlagTimer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progress="100"
        android:progressTint="@color/secondary"
        android:trackTint="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvFlagCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flag 1/10"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressFlagTimer"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFlagImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFlagCount">

        <ImageView
            android:id="@+id/imgFlag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/text_secondary"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which country does this flag belong to?"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/cardFlagImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cardFlagImage"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnFlagOption1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Canada"
                android:layout_marginEnd="6dp"
                app:strokeColor="@color/secondary"
                app:cornerRadius="16dp"/>

            <Button
                android:id="@+id/btnFlagOption2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Japan"
                android:layout_marginStart="6dp"
                app:strokeColor="@color/secondary"
                app:cornerRadius="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFlagOption3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Brazil"
                android:layout_marginEnd="6dp"
                app:strokeColor="@color/secondary"
                app:cornerRadius="16dp"/>

            <Button
                android:id="@+id/btnFlagOption4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Germany"
                android:layout_marginStart="6dp"
                app:strokeColor="@color/secondary"
                app:cornerRadius="16dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>